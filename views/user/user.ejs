<% layout('layout/boilerplate')%>
    <section class="h-100 gradient-custom-2">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-lg-9 col-xl-7">
                    <div class="card">
                        <div class="rounded-top text-white d-flex flex-row"
                            style="background-color: #000; height:200px;">
                            <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
                                <img src="https://static2.yan.vn/YanNews/2167221/202102/facebook-cap-nhat-avatar-doi-voi-tai-khoan-khong-su-dung-anh-dai-dien-e4abd14d.jpg"
                                    alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                                    style="width: 150px; z-index: 1">

                            </div>
                            <div class="ms-3" style="margin-top: 130px;">
                                <%=username%>
                            </div>
                        </div>

                        <div class="card-body p-4 text-black">

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <p class="lead fw-normal mb-0">Phim yeu thich</p>
                            </div>
                            <div>
                                <div class="row">
                                    <% for (let movie of fav){%>
                                        <div class="col-md-3">
                                            <% if(movie.poster_path){ %>
                                                <img src="https://image.tmdb.org/t/p/w600_and_h900_bestv2/<%=movie.poster_path%>"
                                                    class="img-thumbnail" alt="">
                                                <%}else {%>
                                                    <img src="https://drscdn.500px.org/photo/41999700/q%3D80_m%3D1500_of%3D1/v2?sig=236aa55a1f9285f829aeae854b46b723cec830b1b18864d3d24c9ee7ee3cfda2"
                                                        class="img-thumbnail alt="">
                                                    <%}%>
                                                        <p class=" card-title"><strong>
                                                        <a href="/movies/<%=movie.id%>" class="text-decoration-none">
                                                            <%=movie.original_title%>
                                                        </a>
                                                    </strong></p>
                                                    <p class="text-muted">
                                                        Rating: <%=movie.vote_average%>
                                                    </p>
                                                    <%if( currentUser && currentUser.user_id==user_id ){%>
                                                        <form action="/movies/<%=movie.id%>/deletefav" method="post">
                                                            <button type="submit"
                                                                class="btn btn-secondary btn-sm">Xoa</button>
                                                        </form>
                                                        <%}%>
                                        </div>
                                        <%}%>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <p class="lead fw-normal mb-0">Phim da xem</p>
                                </div>
                                <div>
                                    <div class="row">
                                        <% for (let movie of watched){%>
                                            <div class="col-md-3">
                                                <% if(movie.poster_path){ %>
                                                    <img src="https://image.tmdb.org/t/p/w600_and_h900_bestv2/<%=movie.poster_path%>"
                                                        class="img-thumbnail" alt="">
                                                    <%}else {%>
                                                        <img src="https://drscdn.500px.org/photo/41999700/q%3D80_m%3D1500_of%3D1/v2?sig=236aa55a1f9285f829aeae854b46b723cec830b1b18864d3d24c9ee7ee3cfda2"
                                                            class="img-thumbnail alt="">
                                                    <%}%>
                                                        <p class=" card-title"><strong>
                                                            <a href="/movies/<%=movie.id%>"
                                                                class="text-decoration-none">
                                                                <%=movie.original_title%>
                                                            </a>
                                                        </strong></p>
                                                        <p class="text-muted">
                                                            Rating: <%=movie.vote_average%>
                                                        </p>
                                            </div>
                                            <%}%>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>